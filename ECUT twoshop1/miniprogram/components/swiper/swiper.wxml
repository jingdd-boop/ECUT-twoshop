<view class="swiperContainer">
   <swiper class="swiper_box" autoplay="true" interval="5000" circular="true" >
    <block wx:for="{{imgUrls}}" wx:key="index">
      <swiper-item>
      <image src="{{item}}"  class="slide-image" 
      width="750rpx" 
      mode="aspectFill"
      ></image>
    </swiper-item>
    </block>
  </swiper>
</view>