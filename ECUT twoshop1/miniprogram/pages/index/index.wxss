page {
  background-color: #ffffff;
}
.search {
  display: flex;
  flex-direction: row;
  padding-left: 56rpx;
}

.search input {
  height: 50rpx;
  width: 90%;
  border: 1px solid rgb(189, 187, 187);
  border-radius: 40rpx;
  position: relative;
  padding-left: 20rpx;
}
.search image {
  right:90rpx;
  top:5rpx;
  position: absolute;
  height: 50rpx;
  width: 50rpx;
}

.swiper {
  margin-top: 50rpx;
  margin-left: 70rpx;
  
}
swiper{
  width: 100%;
  height: 400rpx;
  
}
.swiper-img{
  height: 300rpx;
  border-radius: 20rpx 20rpx;
  width: 90%;
  box-shadow:  5px 5px 12px #bebebe,
             -5px -5px 12px #ffffff;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  overflow: hidden;
  padding-left: 10px;
  
  
}

.item-list {
  display: flex;
  flex-direction: column; 
}
.item-img {
  position: relative;
  height: 100rpx;
  width: 100rpx;
  color: aquamarine;
}

.nav {
  width: 90%;
  height: 500rpx;
  display: flex;
  flex-direction: row;
  padding-left: 50rpx;
  padding-top: 50rpx;
}

.nav-left {
  padding-right: 30rpx;
}
.nav-left .nav-img {
  height: 420rpx;
  width: 300rpx;
  border-radius: 30rpx;
}
.nav-right {

}

.nav-right .nav-img {
  height: 200rpx;
  padding-bottom: 8rpx;
  width: 300rpx;
  border-radius: 30rpx;
}
