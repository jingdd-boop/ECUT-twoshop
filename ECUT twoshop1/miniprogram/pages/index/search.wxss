/* components/search/search.wxss */
.search {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
}

.search input {
  height: 80rpx;
  width: 90%;
  border: 1px solid rgb(189, 187, 187);
  border-radius: 40rpx;
  position: relative;
  padding-left: 10rpx;
}
.search image {
  position: absolute;
  right:120rpx;
  top:20rpx;
  height: 50rpx;
  width: 50rpx;
}

.shopList{
  height: 230rpx;
  width: 700rpx;
  display: flex;
  flex-direction: row;
  border: 1px solid rgb(236, 234, 234);
  border-radius: 50rpx;
  margin: 30rpx 25rpx;
  padding: 30rpx 0;
  background-color: white;
 
}

.shopList .shop-img {
  height: 230rpx;
  width: 300rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  
  
}
.shopList .shop-img image{
  height: 220rpx;
  width: 300rpx;
  border-radius: 30rpx;
  
}

.userList{
  height: 90rpx;
  width: 300rpx;
  /* background-color: turquoise; */
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  
}
.userList .user-name{
  color:rgb(206, 203, 199);
  padding-left: 20rpx;
  font-size: 30rpx;
}
.userList .user-img image{
  
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;

}


.shop-msg {
  height: 300rpx;
  width: 300rpx;
  /* background-color: turquoise; */
  position: relative;

}

.shop-msg .shop-msg__title {
  font-size: medium;
  font-weight: 900;
}
.shop-msg .shop-msg__detail {
  position: absolute;
  bottom: 80rpx;
  right:0;
  font-size: 30rpx;
  color: rgb(66, 64, 62);
}
.shop-msg .shop-msg__addr {
  position: absolute;
  bottom: 80rpx;
  font-size: 30rpx;
  color: rgb(206, 203, 199);
}